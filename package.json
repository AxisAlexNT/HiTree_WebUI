{
  "name": "hict",
  "version": "0.1.1",
  "private": true,
  "author": "Aleksandr Serdiukov, Anton Zamyatin and CT Lab ITMO University team",
  "main": "dist/electron/electron/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview --port 4173",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "ts": "tsc",
    "watch": "tsc -w",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run build && tsc && electron-builder",
    "app:multibuild": "npm run build && tsc && electron-builder -wl --ia32 --x64",
    "app:preview": "npm run build && tsc && electron ."
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "@types/bootstrap": "5.1.12",
    "axios": "^0.21.4",
    "binary-search": "^1.3.6",
    "binary-search-bounds": "2.0.5",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "core-js": "^3.8.3",
    "normalize.css": "^8.0.1",
    "ol": "^6.15.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^16.11.43",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3",
    "eslint": "^8.5.0",
    "eslint-plugin-vue": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "resize-observer-polyfill": "^1.5.1",
    "typedoc": "^0.23.9",
    "typescript": "~4.7.4",
    "vite": "^2.9.14",
    "vue-tsc": "^0.38.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "build": {
    "appId": "ru.itmo.hict",
    "productName": "HiCT WebUI",
    "copyright": "Copyright Â© 2022 ${author}",
    "files": [
      "dist"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
