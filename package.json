{
  "name": "hict",
  "version": "0.1.1",
  "private": true,
  "author": "Aleksandr Serdiukov, Anton Zamyatin and CT Lab ITMO University team",
  "main": "dist/electron/electron/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctlab/HiCT_WebUI.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only && tsc",
    "preview": "vite preview --port 4173",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "ts": "tsc",
    "watch": "tsc -w",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run build && tsc && electron-builder",
    "app:multibuild": "npm run build && tsc && electron-builder -wl --ia32 --x64",
    "app:preview": "npm run build && tsc && electron ."
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@types/bootstrap": "^5.2.5",
    "axios": "^1.1.3",
    "binary-search": "^1.3.6",
    "binary-search-bounds": "2.0.5",
    "bootstrap": "^5.2.2",
    "bootstrap-icons": "^1.9.1",
    "core-js": "^3.25.5",
    "normalize.css": "^8.0.1",
    "ol": "^6.15.1",
    "vue": "^3.2.41",
    "multi-range-slider-vue": "^1.1.4",
    "igv": "^2.13.3",
    "mobx": "^6.6.2",
    "mobx-vue-lite": "^0.3.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^16.11.43",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "@typescript-eslint/typescript-estree": "^5.40.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.25.0",
    "eslint-plugin-vue": "^9.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vue-tsc": "^1.0.8"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "build": {
    "appId": "ru.itmo.hict",
    "productName": "HiCT WebUI",
    "copyright": "Copyright Â© 2022 ${author}",
    "files": [
      "dist"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "win": {
      "publish": ["github"],
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {
      "publish": ["github"],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
