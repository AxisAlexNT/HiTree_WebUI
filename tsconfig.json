{
  "include": [
    "src/electron/**/*",
    "src/**/*.vue",
    "src/**/*",
    "env.d.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "skipLibCheck": true,
    "outDir": "dist/electron",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "typeAcquisition": {
    "enable": true
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  },
}
